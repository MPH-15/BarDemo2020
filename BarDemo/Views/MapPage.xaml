        <local:CustomMap x:Name="customMap"
                         ItemsSource="{Binding cMap}"
                         MapType="Street"
                         WidthRequest="{x:Static local1:App.ScreenWidth}"
                         HeightRequest="{x:Static local1:App.ScreenHeight}" />
        <!--
                WidthRequest="{x:Static local1:App.ScreenWidth}"
                HeightRequest="{x:Static local1:App.ScreenHeight}"
        -->
    </ContentPage.Content>
